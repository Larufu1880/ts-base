{
  "compilerOptions": {
    "module": "commonjs",
    "noEmitOnError": true,
    "jsx": "react",
    "strict": true,
    "target": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./test"],
  "exclude": ["node_modules"]
}
